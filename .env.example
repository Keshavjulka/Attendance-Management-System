# Environment Variables Template for FaceAttend Pro
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
MONGO_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/your-database?retryWrites=true&w=majority

# JWT Secret Key (generate a secure random string)
JWT_SECRET_KEY=your-super-secret-jwt-key-here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Optional: Add other configurations as needed
# API_KEYS=your-api-keys-here
# SMTP_PASSWORD=your-email-password-here
